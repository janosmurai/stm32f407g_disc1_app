    "version": "0.2.0",
    "configurations": 
    [
        {
            "name": "stm32f4_gdb",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "${workspaceRoot}/target/thumbv7em-none-eabi/debug/stm32f407g_disc1", 
            "gdbpath": "gdb-multiarch",
            "autorun": 
            [
                "target remote localhost:3333",
                "monitor arm semihosting enable",
                "load",
                "break main"
                //"continue"
            ],
        },
    ]
}
